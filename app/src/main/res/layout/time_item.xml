<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.xinyi.studyabroad.weight.SlideDelete
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/time_item_bg"
                android:gravity="center"
                android:text="111111111"
                android:textColor="@color/colorLoginBtnColor"
                android:textSize="@dimen/tv_15sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/delete_tv"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@color/colorredColor"
            android:gravity="center"
            android:text="@string/deleteString1"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/tv_14sp" />
    </com.xinyi.studyabroad.weight.SlideDelete>

</LinearLayout>