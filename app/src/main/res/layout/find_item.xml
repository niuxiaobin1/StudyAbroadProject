<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/newsName"
                android:textSize="@dimen/tv_16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/colorTransparentBlack"
                android:padding="10dp"
                android:textColor="@color/colorWhite" />
        </RelativeLayout>


        <com.xinyi.studyabroad.weight.EllipsizingTextView
            android:id="@+id/newsDetail"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/colorSubTitle"
            android:textSize="@dimen/tv_14sp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/readMoreString"
            android:textColor="@color/colorpinkColor"
            android:textSize="@dimen/tv_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</android.support.v7.widget.CardView>